{
  "name": "@savecontext/mcp",
  "version": "0.1.10",
  "description": "SaveContext MCP Server - Never lose context in your AI coding sessions",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "savecontext": "./dist/index.js",
    "savecontext-migrate": "./dist/cli/migrate.js",
    "mcp": "./dist/index.js",
    "migrate": "./dist/cli/migrate.js"
  },
  "scripts": {
    "build": "tsc && cp src/database/schema.sql dist/database/ && chmod +x dist/index.js dist/cli/migrate.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "serve": "tsx src/index.ts",
    "test": "node dist/index.js",
    "prepublishOnly": "cp ../README.md ./README.md",
    "postpublish": "rm -f ./README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greenfieldlabs-inc/savecontext.git",
    "directory": "server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "context",
    "session-management",
    "checkpoint",
    "ai-coding"
  ],
  "author": "Shane Monastero",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greenfieldlabs-inc/savecontext/issues"
  },
  "homepage": "https://savecontext.dev",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "better-sqlite3": "^11.6.0",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
