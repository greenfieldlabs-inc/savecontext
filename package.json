{
  "name": "savecontext",
  "version": "0.1.30",
  "description": "The OS for AI coding agents",
  "private": true,
  "workspaces": [
    "server",
    "dashboard"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "serve": "npm run serve -w server",
    "start": "npm run start -w server",
    "version:patch": "node server/scripts/npm/bump-version.cjs patch",
    "version:minor": "node server/scripts/npm/bump-version.cjs minor",
    "version:major": "node server/scripts/npm/bump-version.cjs major",
    "sync:migrations": "rm -rf cli/migrations && cp -r migrations cli/ && echo 'Synced migrations to cli/'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greenfieldlabs-inc/savecontext.git"
  },
  "author": "Shane Monastero",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}
